<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence           http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
  <persistence-unit name="CiscoJPA" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>entities.ComputerEntity</class>
    <class>entities.SoftwareEntity</class>
    <class>entities.LaboratoryEntity</class>
    <class>entities.StudentEntity</class>
    <class>entities.DegreeEntity</class>
    <class>entities.BlockEntity</class>
    <class>entities.RuleEntity</class>
    <class>entities.AcademicUnityEntity</class>
    <class>entities.StudentDegreeEntity</class>
    <class>entities.StudentComputerEntity</class>
    <class>entities.ComputerSoftwareEntity</class>
    <class>entities.LaboratoryRulesEntity</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/CiscoJPA?zeroDateTimeBehavior=CONVERT_TO_NULL"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>

      <property name="javax.persistence.jdbc.password" value="nata"/>

    </properties>
  </persistence-unit>
</persistence>
